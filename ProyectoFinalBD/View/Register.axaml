<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoFinalBD.View"
        mc:Ignorable="d"
        x:Class="ProyectoFinalBD.View.Register"
        Width="600"
        Height="600"
        Title="Register"
        Background="#F2F2F2"
        x:DataType="local:Register">
        

    <Grid>
        <Border Background="White" CornerRadius="25" Padding="30" Width="400" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <StackPanel Spacing="15">
                <TextBlock Text="Register" Foreground="Black" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" />
                
                <TextBox Name="Name"
                         Width="300"
                         CornerRadius="10"
                         Foreground="Black"
                         Background="AliceBlue"
                         HorizontalAlignment="Center"
                         Watermark="Name" />

                <TextBox Name="Cedula"
                         Width="300"
                         CornerRadius="10"
                         Foreground="Black"
                         Background="AliceBlue"
                         HorizontalAlignment="Center"
                         Watermark="Cédula" />

                <TextBox Name="Email"
                         Width="300"
                         CornerRadius="10"
                         Foreground="Black"
                         Background="AliceBlue"
                         HorizontalAlignment="Center"
                         Watermark="Email" />

                <TextBox Name="Password"
                         Width="300"
                         CornerRadius="10"
                         Foreground="Black"
                         Background="AliceBlue"
                         HorizontalAlignment="Center"
                         PasswordChar="●"
                         Watermark="Password" />
                
                <ComboBox Name="MunicipalityComboBox"
                          Width="300"
                          HorizontalAlignment="Center"
                          ItemsSource="{Binding Municipalities}"
                          SelectedItem="{Binding SelectedMunicipality, Mode=TwoWay}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>



                <Button Content="Sign Up"
                        Click="RegisterUser"
                        CornerRadius="10"
                        Background="Green"
                        Foreground="White"
                        HorizontalAlignment="Center"
                        Width="150"
                        Margin="0,10,0,0"/>

                <Button Content="Back"
                        CornerRadius="10"
                        Click="Exit"
                        Background="#CC0004"
                        Foreground="White"
                        HorizontalAlignment="Center"
                        Width="150"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
