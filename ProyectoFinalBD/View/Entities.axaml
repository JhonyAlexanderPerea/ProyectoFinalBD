<UserControl
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:ProyectoFinalBD.View"
        xmlns:proyectoFinalBd="clr-namespace:ProyectoFinalBD"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        
        x:Class="ProyectoFinalBD.View.Entities"
        x:DataType="view:Entities"
        >
    <DockPanel>
        <TabControl x:Name="MainTabControl" SelectionChanged="OnTabSelectionChanged">
            <!-- Versión alternativa con ListView -->
            <TabItem Header="Mantenimiento" Foreground="Black">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" 
                               Text="Registros de Mantenimiento"
                               FontSize="20" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"
                               Margin="10"/>
       
                    <ListBox ItemsSource="{Binding Mantenimientos}" Margin="10">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <TextBlock Text="{Binding MaintenanceId}" Width="60"/>
                                    <TextBlock Text="{Binding Date}" Width="100"/>
                                    <TextBlock Text="{Binding Findings}" Width="200"/>
                                    <TextBlock Text="{Binding Cost}" Width="60"/>
                                    <TextBlock Text="{Binding EquipmentId}" Width="60"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                </DockPanel>
            </TabItem>
            
            <!-- Tipo de Equipo -->
            <TabItem Header="Tipo de Equipo" Foreground="Black">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Spacing="10" Margin="10">
                        <Button Content="Nuevo" Background="Green" Foreground="White"/>
                        <Button Content="Editar" Background="Orange" Foreground="White"/>
                        <Button Content="Eliminar" Background="Red" Foreground="White"/>
                    </StackPanel>
                    <DataGrid Name="TipoEquipoGrid" 
                              ItemsSource="{Binding TipoEquipos}"
                              Margin="10" 
                              IsReadOnly="True">
                    </DataGrid>
                </DockPanel>
            </TabItem>
            
            <!-- Ubicación -->
            <TabItem Header="Ubicación" Foreground="Black">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Spacing="10" Margin="10">
                        <Button Content="Nuevo" Background="Green" Foreground="White"/>
                        <Button Content="Editar" Background="Orange" Foreground="White"/>
                        <Button Content="Eliminar" Background="Red" Foreground="White"/>
                    </StackPanel>
                    <DataGrid Name="UbicacionGrid"
                              Margin="10" 
                              IsReadOnly="True"><!--ItemsSource="{Binding Ubicaciones}"-->
                    </DataGrid>
                </DockPanel>
            </TabItem>
            
            <!-- Estado de Equipo -->
            <TabItem Header="Estado de Equipo" Foreground="Black">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Spacing="10" Margin="10">
                        <Button Content="Nuevo" Background="Green" Foreground="White"/>
                        <Button Content="Editar" Background="Orange" Foreground="White"/>
                        <Button Content="Eliminar" Background="Red" Foreground="White"/>
                    </StackPanel>
                    <DataGrid Name="EstadoEquipoGrid"
                            
                              Margin="10" 
                              IsReadOnly="True">
                    </DataGrid>
                </DockPanel>
            </TabItem>
            
            <!-- Daño -->
            <TabItem Header="Daños" Foreground="Black">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Spacing="10" Margin="10">
                        <Button Content="Nuevo" Background="Green" Foreground="White"/>
                        <Button Content="Editar" Background="Orange" Foreground="White"/>
                        <Button Content="Eliminar" Background="Red" Foreground="White"/>
                    </StackPanel>
                    <DataGrid Name="DanoGrid"
                              
                              Margin="10" 
                              IsReadOnly="True">
                    </DataGrid>
                </DockPanel>
            </TabItem>
            
            <!-- Equipo -->
            <TabItem Header="Equipos" Foreground="Black">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Spacing="10" Margin="10">
                        <Button Content="Nuevo" Background="Green" Foreground="White"/>
                        <Button Content="Editar" Background="Orange" Foreground="White"/>
                        <Button Content="Eliminar" Background="Red" Foreground="White"/>
                    </StackPanel>
                    <DataGrid Name="EquipoGrid"
                          
                              Margin="10" 
                              IsReadOnly="True">
                    </DataGrid>
                </DockPanel>
            </TabItem>
            
            <!-- Proveedor -->
            <TabItem Header="Proveedores" Foreground="Black">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Spacing="10" Margin="10">
                        <Button Content="Nuevo" Background="Green" Foreground="White"/>
                        <Button Content="Editar" Background="Orange" Foreground="White"/>
                        <Button Content="Eliminar" Background="Red" Foreground="White"/>
                    </StackPanel>
                    <DataGrid Name="ProveedorGrid"
                              
                              Margin="10" 
                              IsReadOnly="True">
                    </DataGrid>
                </DockPanel>
            </TabItem>
            
            <!-- Usuario -->
            <TabItem Header="Usuarios" Foreground="Black">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Spacing="10" Margin="10">
                        <Button Content="Nuevo" Background="Green" Foreground="White"/>
                        <Button Content="Editar" Background="Orange" Foreground="White"/>
                        <Button Content="Eliminar" Background="Red" Foreground="White"/>
                    </StackPanel>
                    <DataGrid Name="UsuarioGrid"
                        
                              Margin="10" 
                              IsReadOnly="True">
                    </DataGrid>
                </DockPanel>
            </TabItem>
            
            <!-- Municipio -->
            <TabItem Header="Municipios" Foreground="Black">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Spacing="10" Margin="10">
                        <Button Content="Nuevo" Background="Green" Foreground="White"/>
                        <Button Content="Editar" Background="Orange" Foreground="White"/>
                        <Button Content="Eliminar" Background="Red" Foreground="White"/>
                    </StackPanel>
                    <DataGrid Name="MunicipioGrid"
                        
                              Margin="10" 
                              IsReadOnly="True">
                    </DataGrid>
                </DockPanel>
            </TabItem>
            
            <!-- Devolución -->
            <TabItem Header="Devoluciones" Foreground="Black">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Spacing="10" Margin="10">
                        <Button Content="Nuevo" Background="Green" Foreground="White"/>
                        <Button Content="Editar" Background="Orange" Foreground="White"/>
                        <Button Content="Eliminar" Background="Red" Foreground="White"/>
                    </StackPanel>
                    <DataGrid Name="DevolucionGrid" Margin="10" IsReadOnly="True">
                    </DataGrid>
                </DockPanel>
            </TabItem>
            
            <!-- Préstamo -->
            <TabItem Header="Préstamos" Foreground="Black">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Spacing="10" Margin="10">
                        <Button Content="Nuevo" Background="Green" Foreground="White"/>
                        <Button Content="Editar" Background="Orange" Foreground="White"/>
                        <Button Content="Eliminar" Background="Red" Foreground="White"/>
                    </StackPanel>
                    <DataGrid Name="PrestamoGrid" Margin="10" IsReadOnly="True">
                    </DataGrid>
                </DockPanel>
            </TabItem>
            
            <!-- Log de Usuario -->
            <TabItem Header="Log de Usuarios" Foreground="Black">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Spacing="10" Margin="10">
                        <Button Content="Nuevo" Background="Green" Foreground="White"/>
                        <Button Content="Editar" Background="Orange" Foreground="White"/>
                        <Button Content="Eliminar" Background="Red" Foreground="White"/>
                    </StackPanel>
                    <DataGrid Name="LogUsuarioGrid" Margin="10" IsReadOnly="True">
                    </DataGrid>
                </DockPanel>
            </TabItem>
        </TabControl>
    </DockPanel>
</UserControl>